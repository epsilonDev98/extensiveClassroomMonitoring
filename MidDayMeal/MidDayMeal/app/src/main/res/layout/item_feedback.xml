<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:text="Quantity"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


        <RelativeLayout
            android:padding="@dimen/_20sdp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/excellent"
                android:drawableTint="#00E60A"
                android:padding="@dimen/_3sdp"
                android:drawablePadding="@dimen/_3sdp"
                android:text="Excellent"
                android:textColor="#00E60A"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/good"
                android:padding="@dimen/_3sdp"
                android:layout_centerHorizontal="true"
                android:drawablePadding="@dimen/_3sdp"
                android:text="Good"
                android:drawableTint="#FFC107"
                android:drawableLeft="@drawable/ic_thumbs_up_down_black_24dp"
                android:layout_weight="1"
                android:textColor="#FFC107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bad"
                android:padding="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/_3sdp"
                android:text="Bad"
                android:drawableTint="#FF5722"
                android:textColor="#FF5722"
                android:drawableLeft="@drawable/ic_thumb_down_black_24dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>