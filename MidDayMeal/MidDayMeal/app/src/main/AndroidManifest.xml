<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.middaymeal.app">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>


        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".Attendance" />
        <activity android:name=".BudgetInfo" />
        <activity android:name=".Menu" />
        <activity android:name=".EnrollmentActivity" />
        <activity android:name=".Student" />
        <activity android:name=".Feedback" />
        <activity android:name=".FeedbackManagerMainActivity"/>

        <activity android:name=".ActivityClass"/>
    </application>

</manifest>